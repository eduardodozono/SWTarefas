@using SWTarefas.Application.UsesCases.TarefasUseCasesSite.ViewModel
@using static SWTarefas.Application.UsesCases.TarefasUseCases.DTO.Enums.StatusEnum
@model TarefaViewModel

@{
	ViewData["Title"] = "Editar Tarefa";
}

<h4><i class="fa-solid fa-list-check" style="margin-right: 5px;"></i>Editar Tarefa</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="TarefaId" />
			<div class="form-group">
				<label asp-for="Titulo" class="control-label"></label>
				<input asp-for="Titulo" class="form-control" />
				<span asp-validation-for="Titulo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Descricao" class="control-label"></label>
				<textarea asp-for="Descricao" class="form-control" style="height: 80px;"></textarea>
				<span asp-validation-for="Descricao" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DataConclusaoPrevista" class="control-label"></label>
				<input asp-for="DataConclusaoPrevista" class="form-control" />
				<span asp-validation-for="DataConclusaoPrevista" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="DataConclusaoRealizada" class="control-label"></label>
				<input asp-for="DataConclusaoRealizada" class="form-control" />
				<span asp-validation-for="DataConclusaoRealizada" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Status" class="control-label"></label>
				<select asp-for="Status" asp-items="Html.GetEnumSelectList<TarefaStatus>()" class="form-control"></select>
				<span asp-validation-for="Status" class="text-danger"></span>
			</div>
			<div class="form-group" style="margin-top: 5px;">
				<button type="submit" class="btn btn-success btn-sm"><i class="fa-solid fa-check" style="margin-right: 5px;"></i>Salvar</button>
				<a asp-action="Index" class="btn btn-secondary btn-sm"><i class="fa-solid fa-rotate-right" style="margin-right: 5px;"></i>Voltar</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
